#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
    string a,b;
    cin>>a>>b;
    int a1=a.size();
    int b1=b.size();
    cout<<a1<<" "<<b1<<endl;
    string c=a+b;
    cout<<c<<endl;
    char a2=a[0];
    char b2=b[0];
    b[0]=a2;
    a[0]=b2;
    cout<<a<<" "<<b;
    return 0;
}
